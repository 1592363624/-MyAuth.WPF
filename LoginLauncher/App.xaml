<Application
    x:Class="LoginLauncher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LoginLauncher"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ControlStyle.xaml" />
                <!--  Material Design UI Package  -->
                <ResourceDictionary Source="/AutoUpDate;component/ResourceDictionary/Dictionary.xaml" />
                <materialDesign:CustomColorTheme
                    BaseTheme="Dark"
                    PrimaryColor="Aqua"
                    SecondaryColor="DarkGreen" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
